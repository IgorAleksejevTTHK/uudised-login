<%- include("partials/head") %>
<%- include("partials/navbar") %>

<div class="container">
    <h1 class="mb-4">Muuda uudist</h1>

    <% if (errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(e => { %>
                    <li><%= e.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form method="POST" action="/edit/<%= item.id %>">
        <div class="mb-3">
            <label class="form-label">Pealkiri</label>
            <input
                    type="text"
                    name="title"
                    class="form-control"
                    value="<%= item.title %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Sisu</label>
            <textarea
                    name="content"
                    class="form-control"
                    rows="6"><%= item.content %></textarea>
        </div>

        <button class="btn btn-warning">Salvesta muudatus</button>
        <a href="/news/<%= item.id %>" class="btn btn-secondary">Tagasi</a>
    </form>
</div>

<%- include("partials/footer") %>
