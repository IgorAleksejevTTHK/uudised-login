<%- include("partials/head") %>
<%- include("partials/navbar") %>

<div class="container">
    <h1 class="mb-4">Lisa uudis</h1>

    <% if (errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(e => { %>
                    <li><%= e.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form method="POST" action="/add">
        <div class="mb-3">
            <label class="form-label">Pealkiri</label>
            <input
                    type="text"
                    name="title"
                    class="form-control"
                    value="<%= data.title || '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Sisu</label>
            <textarea
                    name="content"
                    class="form-control"
                    rows="6"><%= data.content || '' %></textarea>
        </div>

        <button class="btn btn-primary">Salvesta</button>
        <a href="/" class="btn btn-secondary">TÃ¼hista</a>
    </form>
</div>

